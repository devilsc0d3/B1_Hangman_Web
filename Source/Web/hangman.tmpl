<!doctype html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>NSHW</title>
        <link rel="stylesheet" type="text/css" href="./static/CSS/style.css">
    </head>

    <body>
        <h1>{{.Title}} {{.Word}}</h1>
        <p> You have {{.Attempts}}</p>
        <p>
            {{range .WordUser}}
            {{.}}
            {{end}}
        </p>

        <form method="post" action="/">
            <input type="text" name="wordletter" placeholder="Entrez une lettre ou un mot">
            <input type="submit" value="submit" />
            <p>letter already finding : <br>
                {{range .ToFind}}
                {{.}}
                {{end}}
            </p>
        </form>

        <div class="content">
            <img src={{.Position}} alt="testeu" width="300px" height="300px">
        </div>

        <form method="post">
            <button value="submit" name="reset"> RESET moi </button>
        </form>
    </body>
</html>